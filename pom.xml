  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>

              <artifactSet>
                <excludes>
                  <exclude>org.slf4j.*</exclude>
                  <exclude>ch.qos.*</exclude>
                </excludes>
              </artifactSet>

              <relocations>
                <relocation>
                  <pattern>io.netty</pattern>
                </relocation>
              </relocations>

            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

